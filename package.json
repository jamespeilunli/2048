{
  "name": "2048",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "copy-assets": "mkdir -p dist && cp -r public/* dist && cp -r src/styles/* dist",
    "copy-assets:watch": "chokidar \"public/**/*\" \"src/styles/**/*\" -c \"npm run copy-assets\"",
    "serve": "browser-sync start --server dist --files dist --no-open --no-notify",
    "dev": "concurrently \"npm run build:watch\" \"npm run copy-assets:watch\" \"npm run serve\"",
    "deploy": "gh-pages -d dist"
  },
  "homepage": "https://jamespeilunli.github.io/2048",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "gh-pages": "^6.3.0",
    "typescript": "^5.7.3"
  }
}
